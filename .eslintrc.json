{
  "env": {
    "browser": true,
    "commonjs": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "linebreak-style": ["error", "windows"],
    // "no-restricted-imports": ["error", {
    //   "patterns": [".*"]
    // }],
  }
}
